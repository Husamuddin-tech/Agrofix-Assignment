datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id    Int     @id @default(autoincrement())
  name  String
  price Float
}

model Order {
  id              Int      @id @default(autoincrement())
  buyerName       String
  buyerContact    String
  deliveryAddress String
  items           Json
  status          String   @default("pending")
  createdAt       DateTime @default(now())
}
